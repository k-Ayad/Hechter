<style>
    /* Container equivalent to Bootstrap's container */
    .container {
    max-width: 1140px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;
}

/* Row equivalent to Bootstrap's row with padding-y 3 */
.maps .row {
    display: flex;
    flex-wrap: wrap;
    margin-left: -15px;
    margin-right: -15px;
    padding-top: 1rem;
    padding-bottom: 1rem;
}

/* Center align the content (justify-content-center) */
.maps .justify-content-center {
    justify-content: center;
}

/* Column equivalent to Bootstrap's col-lg-6 with margin-bottom 4 */
.maps .col-lg-6 {
    width: 100%;
    padding-left: 15px;
    padding-right: 15px;
    margin-bottom: 3.5rem;
}

@media (min-width: 992px) {
    .maps  .col-lg-6 {
        width: 50%;
    }
}

/* Headings styling (you can customize it as needed) */
.maps h3 {
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 10px; /* Space between SVG and the title text */
}

/* Paragraph styling */
.maps p {
    font-size: 1rem;
    color: #6c757d;
    margin-bottom: 1rem;
}

/* SVG icons styling (adjust size and alignment) */
.maps svg {
    vertical-align: middle;
}

/* You can add custom iframe styling if needed */
.maps iframe {
    width: 100%;
    height: 300px;
    border: none;
}

/* Optional: Add additional spacing or styles as needed */

</style>
<div class="maps container">
    <div class="row py-3 justify-content-center">
        {% for block in section.blocks %}
            <div class="col-lg-6 mb-4">
                <div >
                        <h3>
                        <svg width="20px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
                        {{block.settings.title}}
                        </h3>
                        <p>{{block.settings.desc}}</p>
                        {% if block.settings.phone != blank %}
                            <p>
                                <svg width="14px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"/></svg>
                                {{block.settings.phone}}
                            </p>
                        {% endif %}
                </div>
                    <div>
                        {{block.settings.iframe}}
                    </div>
            </div>
        {% endfor %}
    </div>
</div>




{% schema %}
{
    "name": "Stores Locations",
    "settings": [
        
        ],
        "blocks": [
            {
                "type": "location",
                "name": "location",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Location title"
                    },
                    {
                        "type": "text",
                        "id": "desc",
                        "label": "Location description"
                    },
                    {
                        "type": "text",
                        "id": "phone",
                        "label": "Phone Number"
                    },
                    {
                        "type": "html",
                        "id": "iframe",
                        "label": "Location iframe"
                    }
                ]
            }
        ],
    "presets": [
        {
            "name": "Stores Locations"
        }
    ]
}
{% endschema %}